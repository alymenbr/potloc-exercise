<div class="w-full mx-auto md:w-4/5">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-blue-50 mb-5 text-blue-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center pb-8">
      <%= link_to 'Back', inventories_path, class: "mr-3 rounded-lg py-2 px-5 bg-gray-100 inline-block font-medium" %>
      <h1 class="mx-auto text-xl font-bold text-4xl">Availability for <em><%= @shoe_model.name %></em></h1>
    </div>

    <%= turbo_stream_from "inventory_model_#{@shoe_model.id}" %>
    <div id="shoe_model_inventory">
      <div class="flex flex-row bg-black text-white">
        <div class="flex-1 basis-1/2 mx-10"><p class="text-xl font-bold my-3">Store</p></div>
        <div class="flex-1 basis-1/4 mx-10"><p class="text-xl font-bold my-3">Model</p></div>
        <div class="flex-1 basis-1/4 mx-10 text-end"><p class="text-xl font-bold my-3">Quantity</p></div>
      </div>
      
      <%= turbo_frame_tag(dom_id(@shoe_model)) do %>
        <% @shoe_model.inventories.each do |inventory| %>   
          <%= render partial: 'inventories/inventory', object: inventory %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
