<div class="w-full mx-auto md:w-4/5">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-blue-50 mb-5 text-gray-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center pb-8 mt-10">
      <h1 class="mx-auto text-xl font-bold text-4xl">Suggestion Genie</em></h1>
    </div>

    <form accept-charset="UTF-8" class="w-full rounded-lg py-5 px-5 bg-black text-white inline-block font-medium cursor-pointer">
      <label for="query">Describe your customer needs and expectations</label>
      <input id="query" name="query" type="text" class="w-full mt-3 rounded-lg text-black text-sm "/>
      <input name="commit" type="submit" value="Find" data-disable-with="Search" class="w-full rounded-lg mt-10 py-2 bg-gray-100 text-black"/>
    </form>

    <% if @result[:valid] %>
      <div class="flex flex-col justify-between items-center mt-10 py-5 px-5 pb-8 bg-gray-800 text-gray-200 rounded-lg">
        <div class="my-4">
          <div class="mx-auto text-4xl font-bold text-center"><%= @result[:shoe_name] %></div>
        </div>

        <div class="my-1">
          <div class="mx-auto my-1 text-xl text-center"><%= @result[:motive] %></div>
        </div>

        <div class="mt-12">
          <div class="mx-auto text-2xl font-bold text-center">Features</div>
          <div class="mx-auto my-1 text-xl text-center"><%= @result[:description] %></div>
        </div>
      </div>
    <% end %>

  </div>
</div>
