<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-blue-50 mb-5 text-blue-500 font-medium
              rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center pb-8">
    <h1 class="mx-auto text-xl font-bold text-4xl">Aldo's Global Inventory</h1>
  </div>

  <table id="inventories" class="mx-auto">
    <thead>
      <tr>
          <td>
            <p class="text-xl font-bold mb-3">Store</p>
          </td>
          <td>
            <p class="text-xl font-bold mb-3">Model</p>
          </td>
          <td>
            <p class="text-xl font-bold mb-3">Quantity</p>
          </td>
      </tr>
    </thead>

    <tbody>
      <% @inventories.each do |inventory| %>
        <tr class="<%= cycle('bg-blue-50', 'bg-white') %>">

          <td>
            <p class="text-l"><%= inventory.shoe_store.name %></p>
          </td>

          <td>
            <p>
              <%= inventory.shoe_model.name %>
            </p>
          </td>          

          <td class="px-2 py-3 text-right">
            <%= inventory.quantity %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
