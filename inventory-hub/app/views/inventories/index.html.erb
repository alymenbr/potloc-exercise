<div class="w-full mx-auto md:w-4/5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-blue-50 mb-5 text-blue-500 font-medium
              rounded-lg inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center pb-8">
    <h1 class="mx-auto pl-20 text-xl font-bold text-4xl">Aldo's Global Inventory</h1>
    <%= link_to 'Suggestions', suggestion_shoe_models_path, class: "rounded-lg py-2 px-5 bg-gray-100 inline-block font-medium" %>
  </div>

  <%= turbo_stream_from 'inventory_global' %>
  <div id="inventories">
    <div class="flex flex-row bg-black text-white">
      <div class="flex-1 basis-1/2 mx-10"><p class="text-xl font-bold my-3">Store</p></div>
      <div class="flex-1 basis-1/4 mx-10"><p class="text-xl font-bold my-3">Model</p></div>
      <div class="flex-1 basis-1/4 mx-10 text-end"><p class="text-xl font-bold my-3">Quantity</p></div>
    </div>
  </div>
  
  <div id="inventory_global_id" class="flex flex-col">
    <% @inventories.each do |inventory| %>   
      <%= render partial: 'inventories/inventory', locals: {inventory: inventory, created: @created, updated: @updated} %>
    <% end %>
  </div>

</div>
